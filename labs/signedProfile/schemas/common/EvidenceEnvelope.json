{
  "$id": "https://example.org/hatpro/schemas/common/EvidenceEnvelope.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceEnvelope (format-agnostic signed evidence)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "issuerDid",
    "holderBinding",
    "proof"
  ],
  "properties": {
    "issuerDid": {
      "$ref": "DID.json"
    },
    "sourceSystem": {
      "type": "string"
    },
    "semanticsRef": {
      "type": "string"
    },
    "dataRef": {
      "type": "string"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time"
    },
    "holderBinding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "holderDid",
        "method"
      ],
      "properties": {
        "holderDid": {
          "$ref": "DID.json"
        },
        "method": {
          "type": "string",
          "enum": [
            "did-subject",
            "did-pop-challenge",
            "transport-bound"
          ]
        },
        "challenge": {
          "type": "string"
        },
        "boundAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "proof": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "JWS-detached",
            "COSE_Sign1",
            "DSSE",
            "CMS-PKCS7",
            "HL7-FHIR-signature",
            "PDF-PKCS7",
            "VC-JWT",
            "VC-LD"
          ]
        },
        "alg": {
          "type": "string"
        },
        "kid": {
          "type": "string"
        },
        "canonicalization": {
          "type": "string"
        },
        "hashAlg": {
          "type": "string"
        },
        "digest": {
          "type": "string"
        },
        "bytes": {
          "type": "string"
        }
      }
    }
  }
}